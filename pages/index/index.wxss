.container {
  width: 100vw;
  height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #f5f5f5;
  overflow: hidden;
  position: fixed;
  display: flex;
  flex-direction: column;
}

/* 登录界面样式 */
.login-box {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
}

.login-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 80rpx;
  color: #333;
}

.input-row {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  width: 90%;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.input-row text {
  font-size: 32rpx;
  margin-right: 20rpx;
  color: #666;
}

.name-input {
  flex: 1;
  font-size: 32rpx;
}

.join-btn {
  width: 80%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #409eff;
  color: #fff;
  font-size: 34rpx;
  border-radius: 44rpx;
  margin-top: 40rpx;
}

/* 房间列表样式 */
.room-info {
  margin: 20rpx 0;
  font-size: 28rpx;
  color: #666;
}

.member-item {
  background: #fff;
  padding: 20rpx;
  margin: 10rpx 0;
  border-radius: 8rpx;
  font-size: 32rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.05);
}

/* 按钮样式 */
.btn-primary {
  background-color: #409eff;
  color: #fff;
  margin-top: 40rpx;
}

.btn-cancel {
  background-color: #f56c6c;
  color: #fff;
  margin-top: 40rpx;
}

.btn-success {
  background-color: #67c23a;
  color: #fff;
  margin-top: 20rpx;
}

/* 选词弹窗样式 */
.choice-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.choice-content {
  background: #fff;
  padding: 40rpx;
  border-radius: 20rpx;
  width: 80%;
  text-align: center;
}

.choice-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
  display: block;
}

.choice-options {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.choice-btn {
  background-color: #409eff;
  color: #fff;
  font-size: 32rpx;
  border-radius: 10rpx;
}
