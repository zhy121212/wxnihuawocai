.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 20px;
}

.title {
  font-size: 20px;
  margin-bottom: 6px;
}

.role {
  margin-bottom: 10px;
  color: #666;
}

.new-btn {
  width: 200px;
  margin-bottom: 10px;
}

.canvas {
  width: 300px;
  height: 400px;
  background-color: #fff;
  border: 1px solid #ccc;
}

.clear-btn {
  margin-top: 10px;
  width: 200px;
}

.guess-area {
  margin-top: 16px;
  width: 80%;
}

.guess-input {
  border: 1px solid #ccc;
  padding: 6px;
  margin-bottom: 8px;
}

.result {
  margin-top: 8px;
  font-size: 16px;
}
