.container {
  width: 100vw;
  height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #f5f5f5;
  overflow: hidden;
  position: fixed; /* 新增：锁定位置 */
}

/* 顶部状态 */
.status {
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.role {
  font-weight: bold;
}

/* 答案（仅画家可见） */
.answer {
  font-size: 28rpx;
  margin-bottom: 20rpx;
  color: #ff4d4f;
}

/* 画板 */
.board {
  width: 100%;
  height: 500px;
  background-color: #ffffff;
  border: 2rpx solid #ddd;
  border-radius: 12rpx;
}

/* 猜词区域 */
.guess-box {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.guess-input {
  flex: 1;
  border: 2rpx solid #ccc;
  border-radius: 8rpx;
  padding: 12rpx;
  font-size: 28rpx;
  background-color: #fff;
}

.guess-btn {
  padding: 0 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #409eff;
  color: #ffffff;
  font-size: 28rpx;
  border-radius: 8rpx;
}

