<view class="container">

<!-- ===== 房间未开始游戏 ===== -->
<view wx:if="{{!gameStarted}}">

  <!-- 房间信息 -->
  <view class="room-info">
    <text>房间ID：{{roomId}}</text>
  </view>

  <!-- 房间成员列表 -->
  <view wx:if="{{members.length}}">
    <text>房间成员:</text>
    <block wx:for="{{members}}" wx:key="id">
      <view>
        <text>
          {{item.id}}
          {{item.ready ? '✅ 已准备' : '❌ 未准备'}}
          {{item.id === host ? '（房主）' : ''}}
        </text>
      </view>
    </block>
  </view>

  <!-- 自己准备按钮 -->
  <button bindtap="toggleReady">
    {{ ready ? '取消准备' : '准备' }}
  </button>

  <!-- 房主开始按钮 -->
  <button wx:if="{{playerId === host && allReady}}" bindtap="startGame">
    开始游戏
  </button>

</view>

</view>
