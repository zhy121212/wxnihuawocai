<view class="container">

<!-- 顶部状态 -->
<view class="status">
  <text class="role">
    {{ isDrawer ? "🎨 你在画画" : "👀 你在猜" }}
  </text>
</view>

<!-- 只有画的人能看到答案 -->
<view class="answer" wx:if="{{ isDrawer }}">
  本局答案：{{ answer }}
</view>

<!-- 画板 -->
<canvas
  canvas-id="board"
  class="board"
  bindtouchstart="onTouchStart"
  bindtouchmove="onTouchMove"
></canvas>

<!-- 猜词区域（只有猜的人能看到） -->
<view wx:if="{{ !isDrawer }}" class="guess-box">
  <input
    class="guess-input"
    placeholder="请输入你猜的答案"
    value="{{ guessText }}"
    bindinput="onGuessInput"
  />
  <button
    class="guess-btn"
    bindtap="submitGuess"
  >
    提交
  </button>
</view>
<button bindtap="clearBoard">
  清空画布
</button>
</view>
