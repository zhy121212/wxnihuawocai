.container { display: flex; flex-direction: column; align-items: center; padding: 15px; background-color: #f9f9f9; height: 100vh; width: 100vw; overflow: hidden; position: fixed; box-sizing: border-box; }
.status-bar { display: flex; justify-content: space-between; align-items: center; width: 100%; margin-bottom: 10px; padding: 0 5px; }
.status { font-size: 18px; font-weight: bold; }
.timer { font-size: 18px; font-weight: bold; color: #333; background: #eee; padding: 4px 10px; border-radius: 20px; }
.timer-danger { color: #fff; background: #ff4d4f; animation: shake 0.5s infinite; }
@keyframes shake { 0%, 100% { transform: translateX(0); } 25% { transform: translateX(-2px); } 75% { transform: translateX(2px); } }

.answer { margin-bottom: 10px; font-size: 16px; color: #ff4d4f; }
.hint { margin-bottom: 10px; font-size: 16px; color: #666; background: #fff5e6; padding: 8px 12px; border-radius: 8px; border-left: 4px solid #ffa500; width: 90%; box-sizing: border-box; }
.waiting-box { margin-bottom: 10px; color: #888; font-size: 14px; }
.board { border: 2px solid #ccc; border-radius: 10px; background-color: #fff; margin-bottom: 15px; }

.guess-box { display: flex; align-items: center; justify-content: center; gap: 8px; margin-bottom: 10px; width: 90%; }
.guess-box input { flex: 1; padding: 8px; font-size: 16px; border: 1px solid #ccc; border-radius: 6px; }
.guess-box button, .clear-btn, .round-end-content button { padding: 8px 16px; font-size: 16px; border: none; border-radius: 6px; background-color: #4caf50; color: #fff; }
.clear-btn { margin-bottom: 10px; }

.guess-history-container { width: 90%; height: 150px; background-color: #fff; border-radius: 10px; border: 1px solid #e0e0e0; overflow: hidden; display: flex; flex-direction: column; box-shadow: 0 2px 5px rgba(0,0,0,0.05); }
.history-title { font-size: 14px; color: #888; padding: 8px 10px; border-bottom: 1px solid #eee; background: #fafafa; }
.history-scroll { flex: 1; height: 100%; }
.history-list { padding: 8px; display: flex; flex-direction: column; gap: 6px; }
.history-item { background-color: #fff0f0; padding: 6px 10px; border-radius: 8px; font-size: 14px; display: inline-flex; flex-wrap: wrap; border: 1px solid #ffe0e0; }
.history-name { color: #409eff; font-weight: bold; margin-right: 6px; }
.history-text { color: #333; word-break: break-all; }

.round-end-overlay { position: fixed; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0,0,0,0.6); display: flex; justify-content: center; align-items: center; z-index: 100; }
.round-end-content { background-color: #fff; padding: 25px; border-radius: 15px; text-align: center; width: 85%; max-width: 350px; }
.round-end-content .title { display: block; font-size: 22px; font-weight: bold; margin-bottom: 15px; }
.round-end-content .drawer-info { margin-bottom: 5px; color: #409eff; font-weight: bold; font-size: 16px; }
.round-end-content .answer-info { margin-bottom: 15px; color: #333; font-size: 16px; }
.round-end-content .last-image { margin: 10px 0 20px 0; max-width: 100%; border: 1px solid #eee; border-radius: 8px; }
.round-end-content button { background-color: #409eff; }

.choice-modal { position: fixed; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0,0,0,0.6); display: flex; justify-content: center; align-items: center; z-index: 999; }
.choice-content { background: #fff; padding: 40rpx; border-radius: 20rpx; width: 80%; text-align: center; }
.choice-title { font-size: 32rpx; font-weight: bold; margin-bottom: 40rpx; display: block; }
.choice-options { display: flex; flex-direction: column; gap: 20rpx; }
.choice-btn { background-color: #409eff; color: #fff; font-size: 32rpx; border-radius: 10rpx; }
