.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 15px;
  background-color: #f9f9f9;
  min-height: 100vh;
  box-sizing: border-box;
}

.status {
  margin-bottom: 8px;
  font-size: 18px;
  font-weight: bold;
}

.answer {
  margin-bottom: 10px;
  font-size: 16px;
  color: #333;
}

.board {
  border: 2px solid #ccc;
  border-radius: 10px;
  background-color: #fff;
  margin-bottom: 15px;
}

.guess-box {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  margin-bottom: 10px;
  width: 90%;
}

.guess-box input {
  flex: 1;
  padding: 8px;
  font-size: 16px;
  border: 1px solid #ccc;
  border-radius: 6px;
}

.guess-box button,
.clear-btn,
.round-end-content button {
  padding: 8px 16px;
  font-size: 16px;
  border: none;
  border-radius: 6px;
  background-color: #4caf50;
  color: #fff;
}

.clear-btn {
  margin-bottom: 10px;
}

.guess-history {
  width: 90%;
  min-height: 40px;
  margin-bottom: 10px;
  padding: 5px;
  border: 1px dashed #ccc;
  border-radius: 6px;
  background-color: #fff;
  font-size: 14px;
}

.round-end-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.round-end-content {
  background-color: #fff;
  padding: 20px;
  border-radius: 10px;
  text-align: center;
}

.round-end-content image {
  margin: 10px 0;
  max-width: 100%;
  border: 1px solid #ccc;
  border-radius: 6px;
}
